<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_btn"
        android:orientation="horizontal"
        android:background="@color/colorAzulClaro">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Buscar contenido"
            android:textColor="@color/colorBlanco"
            android:layout_gravity="center"/>
    </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0sp"
        android:background="@color/colorBlanco">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/editText_main_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ems="5"
                android:hint="Buscar"
                android:inputType="textAutoCorrect"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textSize="15sp"

                style="@style/EditTextFondoGris"
                android:layout_margin="4sp"/>

            <com.tactoapps.caran.views.IndexableListView
                android:id="@+id/listView_main_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/editText_main_search"
                android:cacheColorHint="#00000000"
                android:choiceMode="singleChoice"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0dip"
                android:fadingEdge="none"
                android:scrollbars="none"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"

                android:src="@drawable/btn_lupa_blanco" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
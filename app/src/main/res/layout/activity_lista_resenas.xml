<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:background="@color/colorAzulClaro">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlanco"
                android:textSize="16sp"
                android:text="Titulo"/>

        </LinearLayout>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/colorBlanco"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="¿Cuál es tu calificación?"
            android:textSize="15sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">



                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="25"/>

                <ImageView
                    android:id="@+id/estre1"
                    android:padding="7dp"
                    android:layout_width="@dimen/estrellaGrande"
                    android:layout_height="@dimen/estrellaGrande"
                    android:src ="@drawable/punto_sin_relleno_azul"
                    android:layout_gravity="center_vertical"
                    android:onClick="didTapS1"/>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

                <ImageView
                    android:id="@+id/estre2"
                    android:padding="7dp"
                    android:layout_width="@dimen/estrellaGrande"
                    android:layout_height="@dimen/estrellaGrande"
                    android:src ="@drawable/punto_sin_relleno_azul"
                    android:layout_gravity="center_vertical"
                    android:onClick="didTapS2"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

                <ImageView
                    android:id="@+id/estre3"
                    android:padding="7dp"
                    android:layout_width="@dimen/estrellaGrande"
                    android:layout_height="@dimen/estrellaGrande"
                    android:src ="@drawable/punto_sin_relleno_azul"
                    android:layout_gravity="center_vertical"
                    android:onClick="didTapS3"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

                <ImageView
                    android:id="@+id/estre4"
                    android:padding="7dp"
                    android:layout_width="@dimen/estrellaGrande"
                    android:layout_height="@dimen/estrellaGrande"
                    android:src ="@drawable/punto_sin_relleno_azul"
                    android:layout_gravity="center_vertical"
                    android:onClick="didTapS4"/>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

                <ImageView
                    android:id="@+id/estre5"
                    android:padding="7dp"
                    android:layout_width="@dimen/estrellaGrande"
                    android:layout_height="@dimen/estrellaGrande"
                    android:src ="@drawable/punto_sin_relleno_azul"
                    android:layout_gravity="center_vertical"
                    android:onClick="didTapS5"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="25"/>


            </LinearLayout>



        </FrameLayout>

        <com.tactoapps.caran.views.ActionEditText
            android:id="@+id/comentario"
            style="@style/EditTextFondoBlancoBorde"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:hint="Escribe aquí tus observaciones"
            android:imeOptions="actionDone"
            android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
            android:maxLines="3"/>

        <Button
            android:id="@+id/registro"

            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:alpha="1.0"
            android:onClick="didTapEnviar"
            android:text="Enviar"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:background="@color/colorAzulClaro"
            android:textColor="@color/colorBlanco"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/calificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorRosado"
            android:gravity="center"
            android:padding="2dp"
            android:text="3"
            android:textColor="@color/colorTextoCalificacion"
            android:textSize="17sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:weightSum="10">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:weightSum="10">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:weightSum="10">


        </LinearLayout>

        <ListView
            android:id="@+id/lista"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"

            android:divider="@android:color/transparent"
            android:dividerHeight="2.0sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

        </ListView>


        <FrameLayout
            android:id="@+id/vacio"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Actualmente no hay opiniones."
                android:textSize="12sp"/>
        </FrameLayout>


    </LinearLayout>








</FrameLayout>
